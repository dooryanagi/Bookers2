<h2>User info</h2>

<%= form_with model: @user, url: user_path(@user.id) , method: :patch  do |f| %>

  <p>Name</p>
  <%= f.text_field :name %>

  <p>Image<%= f.file_field :profile_image, accept: "image/*" %></p>

  <p>Introduction</p>
  <%= f.text_area :introduction %>

  <%= f.submit "Update User" %>

<% end %>