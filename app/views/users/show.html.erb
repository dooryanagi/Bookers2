<!--マイページ-->

<h1>User info</h1>

<div>
  <p><%= image_tag @user.get_profile_image(100,100) %></p>
  <p>name<%= @user.name %></p>
  <p>introduction<%= @user.introduction %></p>
</div>


<%= link_to "編集（アイコンに変更）", edit_user_path %>

<div>
  <h2>Books</h2>
  <p>Title</p>
  <p>Opinion</p>

  <% @books.each do |book| %>
    <%= image_tag book.user.get_profile_image(100,100) %>
    <p><%= link_to book.title, book_path(book.id) %></p>



    <p><%= book.opinion %></p>
  <% end %>
</div>

