<div class="container">
  <div class="row">
    <div class="col-md-3">
      <!--共通部分は削除-->

      <!--部分テンプレートの呼び出し（userinfo）、変数の変更user→@user-->
      <%= render 'userinfo', user: @user %>

      <!--部分テンプレート（newbook）の呼び出し-->
      <!--変数は要定義-->
      <%= render 'books/newbook', book: @book %>
    </div>

    <div class="offset-md-1"></div>

    <div class="col-md-8">
      <h2>Books</h2>
      <table>
        <tr>
          <th>
            Title
          </th>
          <th>
            Opinion
          </th>
        </tr>
        <% @books.each do |book| %>
        <tr>
          <td>
            <%= image_tag book.user.get_profile_image(100,100) %>
          </td>
          <td>
            <%= link_to book.title, book_path(book.id) %>
          </td>
          <td>
            <%= book.body %>
          </td>
        </tr>
        <% end %>
      </table>
    </div>
  </div>
</div>