<!--部分テンプレート（user info）の呼び出し-->
<!--変数は要定義-->
<%= render 'users/error', user: @book %>

<div class="contaiter">
  <div class="row">
    <div class="col-md-3">
      <!--部分テンプレート（user info）の呼び出し-->
      <!--変数は要定義-->
      <%= render 'users/userinfo', user: @user %>

      <!--部分テンプレート（newbook）の呼び出し-->
      <!--変数は要定義-->
      <!--インスタンス変数を使用する必要はない-->
      <%= render 'newbook', book: @book %>
    </div>

    <div class="offset-md-1"></div>

    <div class="col-md-8">
      <h2>Books</h2>
      <table>
        <tr>
          <th colspan="2">Title</th>
          <th>Opinion</th>
        </tr>

        <% @books.each do |book| %>
        <tr>
          <td>
            <%= link_to user_path(book.user.id) do %>
              <%= image_tag book.user.get_profile_image(100,100) %>
            <% end %>
          </td>

          <td>
            <%= link_to book.title, book_path(book.id) %>
          </td>
          <td>
            <%= book.body %>
          </td>
        </tr>
        <% end %>
      </table>
    </div>
  </div>
</div>
